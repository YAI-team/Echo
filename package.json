{
	"name": "@yai-team/echo",
	"version": "0.1.0",
	"main": "dist/index.cjs.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc --project tsconfig.build.json && bun run bundle",
		"bundle": "esbuild dist/index.js --bundle --minify --platform=node --format=cjs --outfile=dist/index.cjs.js && esbuild dist/index.js --bundle --minify --platform=node --format=esm --outfile=dist/index.esm.js",
		"test:unit": "jest --coverage"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/jest": "^29.5.14",
		"esbuild": "^0.25.0",
		"jest": "^29.7.0",
		"jest-fetch-mock": "^3.0.3",
		"prettier": "^3.5.1",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"typescript": "^5.7.3"
	},
	"jest": {
		"preset": "ts-jest",
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"testMatch": [
			"**/?(*.)+(spec|test).ts"
		],
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/src/$1"
		}
	},
	"license": "MIT",
	"author": {
		"name": "YAI team",
		"email": "help.yai.team@gmail.com",
		"url": "https://github.com/YAI-team"
	},
	"description": "Echo is a lightweight HTTP client built on the native fetch API, providing an Axios-like experience with support for request and response interceptors. It simplifies network requests by adding headers, handling errors, logging requests, and managing other networking aspects with ease.",
	"repository": {
		"type": "git",
		"url": "https://github.com/YAI-team/Echo"
	},
	"keywords": [
		"http",
		"https",
		"fetch",
		"node",
		"network",
		"request"
	]
}
